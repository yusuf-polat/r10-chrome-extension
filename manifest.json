{
  "manifest_version": 3,
  "name": "R10.net Bildirim Eklentisi",
  "version": "1.0",
  "description": "R10.net bildirimlerini tarayıcıda gösterir",
  "permissions": ["notifications", "storage", "alarms"],
  "host_permissions": ["https://www.r10.net/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
